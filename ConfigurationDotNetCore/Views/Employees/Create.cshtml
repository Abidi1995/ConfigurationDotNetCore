@model ConfigurationDotNetCore.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1 style="font-family:Verdana"> Add An Employee</h1>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group has-feedback">
            <label asp-for="EmployeeFullName">Employee Name</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-car"></i></span>
                <input type="text" class="form-control" placeholder="Enter Employee Name" asp-for="FatherName">
            </div>

        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 has-feedback">
            <label>Father Name</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" class="form-control" placeholder="Enter Employee Name" asp-for="FatherName">
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 has-feedback">

            <label>Date of Birth</label>

            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="date" class="form-control" placeholder="Enter Employee Name" asp-for="DateOfBirth">
            </div>


        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 has-feedback">
            <label>Email</label>
       
                <input type="text" class="form-control" placeholder="Enter Email Address" asp-for="Email">
               
            
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 has-feedback">
            <label>Address</label>
            <div class="form-group form-group-feedback form-group-feedback-left">
                <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address">
              
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 has-feedback">
            <label>Age</label>
            <div class="form-group form-group-feedback form-group-feedback-left">
                <input type="number" class="form-control" placeholder="Enter Age" asp-for="Age">
               
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 ">
            <input type="submit" value="Create" class="btn btn-primary float-right" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
